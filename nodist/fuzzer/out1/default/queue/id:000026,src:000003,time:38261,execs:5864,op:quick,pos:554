module testbench;
  import pkg_types::*;
  
   logic rst_n = 0;
  
  // Clockce
  initial begin
    rst_n = 0;
  end
  
  // s
  complex_if #(.WIDTH(32)) intf_in();
  complex_if #(.WIDTH(32)) intf_out();
 odule #(  ) dut (
    .clk(clk),
    .rst_n(rst_n),
    
    .out_if(intf_out)
  );
  
  // Tests
  initial begin
    intf_in.data = 0;
    intf_in.valid = 0;
    intf_out.ready = 1;
   for (int i = 0; i < 20; i++) begin
      intf_in.data = $random;
      intf_in.valid = 1;
    
      if (i % 3 == 0) begin
        intf_in.valid = 0;
@(posedge clk);
      end
      
      if (i % 5 == 0) begin
        intf_out.ready = 0; intf_out.ready = 1;
      end
    end
 intf_in.valid = 0;
    repeat(5)  $finish;
  end
  
  //ing
  always @(posedge clk) begin
    if (intf_out.valid && intf_out.ready) begin
      $display("Output: %h", intf_out.data);
    end
  end
endmodule